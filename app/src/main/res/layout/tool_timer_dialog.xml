<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Coo_BackgroundLightGrey"
                android:soundEffectsEnabled="true">
    <!--
    <com.coo.y2.cooyummyking.widget.RotaryKnobView
        android:id="@+id/tool_timer_jog"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"/>
        -->
    <LinearLayout
        android:id="@+id/tool_timer_jog_group"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:background="@drawable/jog_background">
        <ImageView
            android:id="@+id/tool_timer_jog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/jog_point"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tool_timer_display"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_above="@id/tool_timer_jog_group"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textAppearance="@style/TextLargeDarkGrey"
        android:textSize="36sp"
        android:textStyle="italic"
        android:background="@drawable/shape_background_white_with_grey_stroke"
        android:text="0"/>
    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tool_timer_jog_group"
        android:layout_alignRight="@id/tool_timer_jog_group"
        android:textAppearance="@style/TextLargeItalicLightGrey"
        android:text="15"/>
    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tool_timer_jog_group"
        android:layout_centerVertical="true"
        android:textAppearance="@style/TextLargeItalicLightGrey"
        android:text="30"/>
    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_timer_jog_group"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextLargeItalicLightGrey"
        android:text="60"/>
    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tool_timer_jog_group"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textAppearance="@style/TextLargeItalicLightGrey"
        android:text="90"/>
</RelativeLayout>