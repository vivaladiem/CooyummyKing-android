<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:id="@+id/tool_scrollview"
    android:background="@drawable/tool_background_1"
    android:scrollbars="none"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/list_root_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff999999"
                    android:paddingRight="21.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    />
                <EditText
                    android:textColor="#ff999999"
                    android:id="@+id/tool_basic_title"
                    android:background="@drawable/background_white_with_grey_stroke"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6.0dip"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff999999"
                    android:paddingRight="21.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"
                    />
                <ImageButton
                    android:id="@+id/tool_info_icon_cookingtime"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:src="@drawable/recipe_info_icon_cookingtime"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    />
                <EditText
                    android:textColor="#ff999999"
                    android:id="@+id/tool_basic_cookingtime"
                    android:background="@drawable/background_white_with_grey_stroke"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6.0dip"
                    android:singleLine="true"
                    android:inputType="numberSigned"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff999999"
                    android:paddingRight="21.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="테마"
                    />
                <ImageButton
                    android:id="@+id/tool_info_icon_theme"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:src="@drawable/detail_recipe_icon_time"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    />
                <Spinner
                    android:textColor="#ff999999"
                    android:id="@+id/tool_basic_theme"
                    android:background="@drawable/background_white_with_grey_stroke"
                    android:layout_width="fill_parent"
                    android:layout_height="25.0dip"
                    android:layout_margin="6.0dip"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff999999"
                    android:paddingRight="21.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재료"
                    />
                <ImageButton
                    android:id="@+id/tool_info_icon_ingredient"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:src="@drawable/detail_recipe_icon_time"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    />
                <MultiAutoCompleteTextView
                    android:textColor="#ff999999"
                    android:id="@+id/tool_basic_ingredient"
                    android:background="@drawable/background_white_with_grey_stroke"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6.0dip"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ff999999"
                    android:paddingRight="21.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="양념"
                    />
                <MultiAutoCompleteTextView
                    android:textColor="#ff999999"
                    android:id="@+id/tool_basic_seasoning"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6.0dip"
                    android:singleLine="true"
                    android:background="@drawable/background_white_with_grey_stroke"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tool_link_1"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#19000000"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tool_btn_album"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <ImageButton
                    android:id="@+id/tool_btn_camera"
                    android:background="@null"
                    android:paddingRight="34.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tool_btn_camera"
                    android:adjustViewBounds="true"
                    />
                <ImageButton
                    android:id="@+id/tool_btn_album"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tool_btn_album"
                    android:adjustViewBounds="true"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tool_link_2"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:orientation="vertical"
            android:background="#321f1c1d"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                />
            <!--
            <ca.laplanete.mobile.pageddragdropgrid.DragDropGrid
                android:id="@+id/tool_btn_gridview_"
                android:background="@*android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
            -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>