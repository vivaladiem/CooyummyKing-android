<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--
        <item name="android:actionBarStyle">@style/CooActionBar</item>
        <item name="actionBarStyle">@style/CooActionBar</item> -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="CooActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="background">@drawable/actionbar_bg</item>
    </style>
    // http://developer.android.com/reference/android/support/v7/appcompat/R.styleable.html 참고. 툴바 커스텀 가능 요소들
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="barSize">24sp</item>
        <item name="thickness">3sp</item>
        <item name="gapBetweenBars">3sp</item>
        <item name="middleBarArrowSize">20sp</item>
    </style>
</resources>
